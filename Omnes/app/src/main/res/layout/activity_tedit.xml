<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeditActivity">
    <TextView
        android:id="@+id/ttle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="TimeTable"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/ocr_a"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classname"
        android:text="classname"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ttle"/>


    <ScrollView
        android:fillViewport="true"
        android:id="@+id/sc"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/classname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop= "20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tblhold"
            android:background="@drawable/input">

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/d1"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:hint="DAY"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Time"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#000000" />
                <TextView
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="SUBJECT"/>
            </TableRow>
            <View

                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/t1"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="09:30"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#000000" />
                <EditText
                    android:id="@+id/s1"
                    android:background="@color/white"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:hint="SUBJECT1"/>
            </TableRow>
            <View
                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/t2"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="10:20"/>
                <View
                    android:layout_height="60dp"
                    android:background="#000000" />
                <EditText
                    android:background="@color/white"
                    android:id="@+id/s2"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:hint="SUBJECT2"/>
            </TableRow>
            <View

                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/t3"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="11:10"/>
                <View
                    android:layout_height="60dp"
                    android:background="#000000" />
                <EditText
                    android:background="@color/white"
                    android:id="@+id/s3"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:hint="SUBJECT3"/>
            </TableRow>
            <View

                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/t4"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="12:00"/>
                <View
                    android:layout_height="60dp"
                    android:background="#000000" />
                <EditText
                    android:background="@color/white"
                    android:id="@+id/s4"
                    android:layout_height="60dp"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:hint="SUBJECT4"/>
            </TableRow>
            <View

                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="LUNCH BREAK "/>
                <View
                    android:layout_height="60dp"
                    android:background="#00FFFFFF" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_column="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="(12:50-13:30)"/>

            </TableRow>
            <View

                android:layout_height="2dp"
                android:background="#000000" />
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/t5"
                    android:layout_height="60dp"
